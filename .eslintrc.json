{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "love",
        "prettier"
    ],
    "overrides": [{
        "files": [
            "./src/**/*.ts",
            "./src-helper/**/*.ts"
        ]
    }],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": ["./tsconfig.json"]
    },
    "ignorePatterns": ["dist"]
}
